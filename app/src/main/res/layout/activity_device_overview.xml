<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceOverviewActivity">

    <TextView
        android:id="@+id/tvDevice_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="143dp"
        tools:text="placeholder" />

    <TextView
        android:id="@+id/tvUser_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDevice_ID"
        tools:layout_editor_absoluteX="143dp"
        tools:text="placeholder" />

    <TextView
        android:id="@+id/tvCoordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvUser_name"
        tools:layout_editor_absoluteX="143dp"
        tools:text="placeholder" />

    <TextView
        android:id="@+id/tvOn_Feet_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCoordinates"
        tools:layout_editor_absoluteX="143dp"
        tools:text="placeholder" />
</android.support.constraint.ConstraintLayout>